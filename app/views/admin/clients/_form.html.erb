<div class="container-fluid"> 
  <div class="row-fluid">
    <div class="box">
      <div class="col-lg-12" id="new_client_form">
        <%= form_for Client.new ,url: admin_clients_path do |f| %>
          <div class="form-group">
            <%= f.label :first_name, "FIRST NAME " %>
            <%= f.text_field :first_name, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :full_street_address, "ADDRESS " %>
            <%= f.text_field :full_street_address, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :email, "EMAIL " %>
            <%= f.text_field :email, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :coffee_selected, "COFFEE SELECTION " %><br>
            <%= f.select :coffee_selected, options_for_select([["SELECT ONE", ""], "Elida Estates catuai (washed) - 250g - 18€", "Cafetalera Fernandez typica (washed) - 250g - 15€", "Elida Estates catuai (natural) - 250g - 18€", "Finca Jaramillo geisha (natural) - 150g - 21€", "Finca Deborah geisha (washed) - 150g - 30€"]), :class => 'form-control' %>
          </div>
          <%= f.submit "SEND", :class => "btn btn-primary btn-lg", :id => "btn-form" %>
        <% end %> 
      </div>
    </div>
  </div>
</div>